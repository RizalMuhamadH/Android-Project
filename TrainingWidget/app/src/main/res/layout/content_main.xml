<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.trainingwidget.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        android:id="@+id/btn_one"/>


    <EditText

        android:id="@+id/txt_one"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_one"
        android:layout_alignParentStart="true" />

    <Button

        style="?android:attr/buttonStyleSmall"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Button 2"

        android:id="@+id/btn_two"
        android:layout_below="@+id/btn_one"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />


    <RadioGroup
        android:id="@+id/meat_rbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_two"
        android:layout_alignParentStart="true">
        <RadioButton
            android:id="@+id/rb_sea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Sea"/>
        <RadioButton
            android:id="@+id/rb_mountain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mountain"/>
        <Button
            Style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 3"
            android:id="@+id/btn_three"/>
    </RadioGroup>


    <CheckBox

        android:id="@+id/cb_shark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="shark"
        android:layout_alignTop="@+id/btn_two"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/cb_whale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="whale"
        android:layout_below="@+id/cb_shark"
        android:layout_alignStart="@+id/cb_shark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 4"
        android:id="@+id/btn_four"
        android:layout_below="@+id/cb_whale"
        android:layout_alignStart="@+id/cb_whale" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 5"
        android:id="@+id/btn_five"
        android:layout_below="@+id/meat_rbg"
        android:layout_toEndOf="@+id/meat_rbg"
        android:layout_marginTop="85dp" />
</RelativeLayout>
